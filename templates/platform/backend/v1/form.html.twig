{% extends 'platform/backend/v1/base.html.twig' %}

{% block main %}

    <main class="col-md-9 ms-sm-auto col-lg-10">
        <div class="mx-3 my-4">

            {% for message in app.flashes('success') %}
                <div class="alert alert-success">
                    {{ message }}
                </div>
            {% endfor %}

            <h1 class="fs-5 fw-bold text-uppercase">{{ title }}</h1>
            <hr>
            {{ form_start(form) }}
            {{ form_errors(form) }}
            {{ form_widget(form) }}

            <button type="submit" class="btn btn-success btn-lg my-3">
                <i class="bi bi-save mx-1"></i> {{ 'action.save'|trans }}
            </button>
            {{ form_end(form) }}

        </div>

    </main>

{% endblock %}
