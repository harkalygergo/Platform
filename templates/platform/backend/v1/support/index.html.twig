{% extends 'platform/backend/v1/base.html.twig' %}

{% block main %}

    <main class="col-md-9 ms-sm-auto col-lg-10">
        <div class="mx-3 my-4">
            <h1 class="fw-bold fs-3">
                <i class="bi bi-person-badge mx-3"></i> Felhasználói dokumentáció
            </h1>
            <hr>

            <div class="card-group">
                <div class="card">
                    <div class="card-header text-uppercase fw-bold">
                        E-mail konfiguráció | webmail
                    </div>
                    <div class="card-body">
                        <table class="table table-sm">
                            <tbody>
                            <tr>
                                <td class="text-nowrap">domain webmail</td>
                                <td><strong>webmail.<code>domain.tld</code></strong></td>
                            </tr>
                            <tr>
                                <td class="text-nowrap">globális webmail</td>
                                <td><strong><a target="_blank" href="//webmail.brandcomstudio.com">webmail.brandcomstudio.com</a></strong></td>
                            </tr>
                            <tr>
                                <td class="text-nowrap">felhasználónév</td>
                                <td><strong><code><i>teljes e-mail cím</i></code></strong></td>
                            </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="card">
                    <div class="card-header text-uppercase fw-bold">
                        E-mail konfiguráció | IMAP
                    </div>
                    <div class="card-body">
                        <table class="table table-sm">
                            <tbody>
                            <tr>
                                <td>autentikáció</td>
                                <td><strong>normál jelszó</strong></td>
                            </tr>
                            <tr>
                                <td>SSL/TLS port</td>
                                <td><strong>993</strong></td>
                            </tr>
                            <tr>
                                <td>STARTTLS port</td>
                                <td><strong>143</strong></td>
                            </tr>
                            <tr>
                                <td>no encryption port</td>
                                <td><strong>143</strong></td>
                            </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="card">
                    <div class="card-header text-uppercase fw-bold">
                        E-mail konfiguráció | POP3
                    </div>
                    <div class="card-body">
                        <table class="table table-sm">
                            <tbody>
                            <tr>
                                <td>autentikáció</td>
                                <td><strong>normál jelszó</strong></td>
                            </tr>
                            <tr>
                                <td>SSL/TLS port</td>
                                <td><strong>995</strong></td>
                            </tr>
                            <tr>
                                <td>STARTTLS port</td>
                                <td><strong>110</strong></td>
                            </tr>
                            <tr>
                                <td>no encryption port</td>
                                <td><strong>110</strong></td>
                            </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="card">
                    <div class="card-header text-uppercase fw-bold">
                        E-mail konfiguráció | SMTP
                    </div>
                    <div class="card-body">
                        <table class="table table-sm">
                            <tbody>
                            <tr>
                                <td>autentikáció</td>
                                <td><strong>normál jelszó</strong></td>
                            </tr>
                            <tr>
                                <td>SSL/TLS port</td>
                                <td><strong>465</strong></td>
                            </tr>
                            <tr>
                                <td>STARTTLS port</td>
                                <td><strong>587</strong></td>
                            </tr>
                            <tr>
                                <td>no encryption port</td>
                                <td><strong>25</strong></td>
                            </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>

    </main>

{% endblock %}
