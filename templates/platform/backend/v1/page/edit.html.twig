{% extends 'platform/backend/v1/base.html.twig' %}

{% block main %}

    <style>
        .nav-link.active {
            font-weight: bold;
        }
    </style>

    <main class="col-md-9 ms-sm-auto col-lg-10">

        <div class="card mx-3 my-4 text-center">
            <div class="card-header">
                <div class="text-start">
                    <ul class="nav nav-tabs card-header-tabs" id="myTab"
                        role="tablist">
                        <li class="nav-item">
                            <a class="nav-link text-uppercase text-dark active" id="tab1-tab" data-bs-toggle="tab" href="#tab1" role="tab" aria-controls="tab1" aria-selected="true">
                                Bejegyzés tartalma
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-uppercase text-dark" id="tab2-tab" data-bs-toggle="tab" href="#tab2" role="tab" aria-controls="tab2" aria-selected="false">
                                SEO
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="card-body">
                <div class="tab-content" id="myTabContent">
                    <div class="tab-pane fade show active" id="tab1" role="tabpanel" aria-labelledby="tab1-tab">
                        bejegyzés szerkesztése
                    </div>
                    <div class="tab-pane fade" id="tab2" role="tabpanel" aria-labelledby="tab2-tab">
                        seo beállítások
                    </div>
                </div>
            </div>
        </div>

    </main>

{% endblock %}
